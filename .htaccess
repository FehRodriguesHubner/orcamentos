# RewriteRule ^modelos/editar/(.*)$     pages/contents/models/edit.php?id=$1

RewriteRule ^congressos/acessar$                  pages/contents/models/list.php
RewriteRule ^congressos/cadastros/cadastrar$      pages/contents/models/create.php
RewriteRule ^congressos/cadastros/editar$      pages/contents/models/edit.php


<IfModule pagespeed_module>
    ModPagespeed off
</IfModule>

